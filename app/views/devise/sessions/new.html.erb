<div class="login-container" style="height: 100vh">
  <h2 style="font-size: 55px; font-weight: 400; margin-top: 15vh; margin-left: -19vh; margin-bottom: 2vh">Log in</h2>
  <img src="<%= asset_path('logo.png') %>" alt="logo-sustainably" style="width: 70px; height: 70px">

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs" style= "color:  gray; width: 35vh; margin-top: 5vh;">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions text-center">
      <%= f.button :submit, "L O G I N", class: "btn-login"%>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
