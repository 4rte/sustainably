<div class="gradient-container">
  <%= render 'shared/navbar' %>
  <div class="card-profile text-center">
    <a href="" style="color: black; text-decoration: underline"><h1><%= @business.name %></h1></a>
    <p><%= @business.description %></p>
<!--     <a href="" class="btn-main">Rate your experience</a>
 -->
  </div>
   <!-- <div id="map"
    style="width: 50vw; height: 350px;"
    data-markers="<%= @marker.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div> -->

  <div class="card-review">
    <%= simple_form_for ([@business, @review]) do |f| %>
    <div class="text-center">
      <%= f.input :rating, collection: (1..5).to_a, label: "Rate your experience", class:"text-center"%>
    </div>
      <%= f.input :content, label: false, placeholder: "tell us more about your experience with #{@business.name}...", as: :text %>
      <div class="text-center">
        <%= f.submit class: "btn-review"%>
      </div>
    <% end %>
  </div>

  <p style="margin-top: 2vh;font-size: 17px;">What other people say about <%= @business.name %></p>

  <% if @business.reviews.empty? %>
    <p style="font-weight: lighter;">Be the first to leave a review</p>
  <% else %>
    <% @business.reviews.each do |review| %>
      <div class="card-review-overview">
        <div class="card-review-left-user-div">
          <% if review.user.photo.attached? %>
          <%= cl_image_tag review.user.photo.key, width: 400, crop: :fill %>
          <% else %>
          <img src="https://www.flaticon.com/svg/static/icons/svg/1077/1077114.svg" alt="profile_pic">
          <% end %>
          <a href="#">Link to all users-reviews</a>
        </div>
        <div class="card-review-overview-infos">
          <h2><%= review.user.first_name %></h2>
          <p><%= review.content %></p>
          <p style="text-align: right"><span class="badge badge-primary badge-pill">
            <% counter = 0 %>
            <% 5.times do %>
              <i class="fa <%= review.rating > counter ? 'fa-star' : 'fa-star-o' %>"></i>
              <% counter += 1 %>
            <% end %>
          </span></p>
        </div>
      </div>
    <% end %>
  <% end %>
  <div class="btn-main">Visit Shop</div>
</div>
