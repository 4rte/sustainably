<div class="gradient-container" >
  <%= render 'shared/navbar' %>
  <h2 style="font-size: 28px; margin-top: 4vh;"> what are you looking for?</h2>
    <img src="<%= asset_path('logo.png') %>" alt="logo-sustainably" style="width: 70px; height: 70px;margin-bottom: 3vh;">
    <% @categories.each do |category| %>
      <div class="card-category" style="background-size: cover; background-image: url(<%= asset_path category.asset_path %>)"><div class="btn-category-black"> <%= link_to category.title, category_sub_categories_path(category) %> </div></div>
    <% end %>
    <div id="footer-sticky" class="btn-container-back">
      <%= link_to "<", root_path, class: "btn-back" %>
      <div class="btn-menu-bottom">
         <img src="<%= asset_path('menu.svg') %>" alt="menu">
      </div>
    </div>
</div>
